# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in the actual values for your environment
# DO NOT commit .env to version control - use .env.example as documentation
# ============================================================================

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# API URL for the frontend to communicate with the backend
# Development: Use localhost with backend port (usually 5000)
# Production: Use the deployed backend URL
VITE_API_URL=http://localhost:5000

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Server Port
# The port on which the Express server will listen
# Default: 5000
PORT=5000

# Environment Type
# Values: development, production, staging
# Default: development
NODE_ENV=development

# Frontend URL (for CORS configuration)
# Should match where the frontend is running or deployed
# Default: http://localhost:5173 (Vite dev server default port)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# OPTION 1: MongoDB Connection String
# Example: mongodb://localhost:27017/react-template
# For MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/dbname
# Leave empty if not using MongoDB
MONGODB_URL=

# OPTION 2: Supabase Configuration
# Supabase Project URL (from Supabase dashboard)
SUPABASE_URL=https://your-project.supabase.co
# Supabase Anon Public Key (from Supabase dashboard)
SUPABASE_ANON_KEY=
# Supabase Service Role Key (backend only)
SUPABASE_SERVICE_ROLE_KEY=

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT (JSON Web Token) Secret
# Generate a strong random string for signing tokens
# Example: 'your-super-secret-jwt-key-change-this'
JWT_SECRET=make-this-strong-and-unique-for-production

# JWT Expiration Time
# Format: https://github.com/vercel/ms#examples
# Examples: 7d, 24h, 3600
JWT_EXPIRATION=7d

# ============================================================================
# ACCOUNT MANAGEMENT - CLERK
# ============================================================================

# Clerk Frontend API Key
# Get from https://dashboard.clerk.com/apps
VITE_CLERK_PUBLISHABLE_KEY=

# Clerk Backend Secret Key (backend only)
CLERK_SECRET_KEY=

# Clerk API Key (for backend API calls)
CLERK_API_KEY=

# ============================================================================
# AI INTEGRATIONS
# ============================================================================

# OpenAI API Key
# Get from https://platform.openai.com/api-keys
# Recommended models: gpt-4, gpt-4-turbo, gpt-3.5-turbo
OPENAI_API_KEY=

# Anthropic API Key
# Get from https://console.anthropic.com/
# Recommended models: claude-3-opus, claude-3-sonnet, claude-3-haiku
ANTHROPIC_API_KEY=

# ============================================================================
# PAYMENT PROCESSING - STRIPE
# ============================================================================

# Stripe Public Key (used on frontend)
# Get from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=

# Stripe Secret Key (backend only)
# Use with Stripe Node.js library
STRIPE_SECRET_KEY=

# Stripe Webhook Secret
# Used for verifying webhook signatures from Stripe
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# EMAIL SENDING - RESEND
# ============================================================================

# Resend API Key
# Get from https://resend.com/api-keys
# Used for sending transactional emails
RESEND_API_KEY=

# Resend From Email Address
# Should be verified in your Resend account
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

# Log Level
# Values: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# Enable Debug Mode
# Values: true, false
# Default: false
DEBUG=false

# ============================================================================
# ADDITIONAL SERVICE CONFIGURATIONS
# ============================================================================

# AWS Configuration (if using S3, Lambda, etc.)
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# SendGrid Configuration (alternative to Resend for email)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Google Configuration (for OAuth, Analytics, etc.)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub Configuration (for OAuth)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
